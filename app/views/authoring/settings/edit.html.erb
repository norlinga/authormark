<h1 class="text-2xl mb-4">Site Settings</h1>

<%= form_with url: authoring_settings_path, method: :put, local: true do |f| %>
  <div class="mb-4">
    <%= label_tag :site_title, "Site Title", class: "block text-sm font-medium text-gray-700" %>
    <%= text_field_tag :site_title, @site_title, class: "mt-1 block w-full rounded border-gray-300 shadow-sm" %>
  </div>

  <div class="mb-4">
    <%= label_tag :copyright_text, "Copyright Text", class: "block text-sm font-medium text-gray-700" %>
    <%= text_field_tag :copyright_text, @copyright_text, class: "mt-1 block w-full rounded border-gray-300 shadow-sm" %>
  </div>

  <div class="mb-4">
    <%= label_tag :header_content, "Header Content", class: "block text-sm font-medium text-gray-700" %>
    <%= text_field_tag :header_content, @header_content, class: "mt-1 block w-full rounded border-gray-300 shadow-sm" %>
  </div>

  <%= f.submit "Save Settings", class: "px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700" %>
<% end %>
